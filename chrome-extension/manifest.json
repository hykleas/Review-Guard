{
  "manifest_version": 3,
  "name": "ReviewGuard - Otomatik Yorum Doldurma",
  "version": "1.0.0",
  "description": "Google Maps yorumlarını otomatik doldurur",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://maps.google.com/*",
    "https://www.google.com/maps/*",
    "https://g.page/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://maps.google.com/*",
        "https://www.google.com/maps/*",
        "https://g.page/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
